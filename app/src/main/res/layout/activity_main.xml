<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/nicky">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/uname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                android:hint="Username"
                android:textSize="15dp"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:textColor="#3a3636"
                android:textColorHint="#abafb3"

                />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_phone_android_black_24dp"
                android:hint="Username"
                android:textSize="15dp"
                android:singleLine="true"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="15dp"
                android:textColor="#3a3636"
                android:textColorHint="#abafb3"


                />
        </android.support.design.widget.TextInputLayout>


        <EditText
            android:id="@+id/mno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_phone_android_black_24dp"
            android:hint="Mobile"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="15dp"
            android:textColor="#7ff61e"
            android:textColorHint="#fff"/>
        <EditText
            android:id="@+id/block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Block/flat no."
            android:drawableLeft="@drawable/ic_home_black_24dp"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#7ff61e"
            android:textColorHint="#fff"
            android:drawablePadding="15dp"/>

        <EditText
            android:id="@+id/comp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Complaint box"
            android:drawableLeft="@drawable/ic_chat_bubble_outline_black_24dp"
            android:textSize="20dp"
            android:paddingLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="60dp"
            android:layout_marginTop="10dp"
            android:textColor="#7ff61e"
            android:textColorHint="#fff"
            android:drawablePadding="15dp"
            android:scrollbars="vertical"
            />

        <Button
            android:id="@+id/sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_marginTop="40dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/submit"/>

    </LinearLayout>


</FrameLayout>